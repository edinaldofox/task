{% extends 'base.twig' %}

{% block body %}

    <div class="row">
        <div class="col-lg-6">
            <form role="form" method="post" action="/usuario/editar">
                <div class="form-group">
                    <label>Nome</label>
                    <input name="nome" disabled="disabled" value="{{ usuario.nome }}" class="form-control">
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input name="email" disabled="disabled" value="{{ usuario.email }}" class="form-control">
                </div>

                <a href="/usuario/listar" class="btn btn-default">Voltar</a>
            </form>
        </div>
    </div>

{% endblock %}