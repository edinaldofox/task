{% extends 'base.twig' %}

{% block body %}

    <div class="row">
        <div class="col-lg-12">
            <form role="form" method="post" action="/task/cadastro">
                <div class="form-group">
                    <label>Nome</label>
                    <input type="text" name="nome" value="{{ task.nome }}" class="form-control">
                </div>
                <div class="form-group">
                    <label for="descricao">Descrição</label>
                    <textarea id="descricao" class="form-control" name="descricao">{{ task.descricao }}</textarea>
                </div>

                <div class="form-group">
                    <label>Andamento</label>
                    <input type="number" name="andamento" value="{{ task.andamento }}" class="form-control">
                </div>

                <div class="form-group">
                    <label>Usuário</label>
                    <select name="usuario" class="form-control">
                        <option>Selecione um usuário</option>
                        {% for usuario in usuarios %}
                            <option value="{{ usuario.id }}" {{ usuario.id }}>{{ usuario.nome }}</option>
                        {% endfor %}
                    </select>
                </div>

                <button type="submit" class="btn btn-default">Salvar</button>
                <button type="reset" class="btn btn-default">Limpar</button>
            </form>
        </div>
    </div>

{% endblock %}