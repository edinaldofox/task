{% extends 'base.twig' %}

{% block body %}

    <div class="row">
        <div class="col-lg-12">
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>Nome</th>
                            <th>Andamento</th>
                            <th>Usuário</th>
                            <th>Ação</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for task in tasks %}
                            <tr class="text-center">
                                <td>{{ task.task_id }}</td>
                                <td>{{ task.task_nome }}</td>
                                <td>{{ task.task_andamento }} %</td>
                                <td>{{ task.usuario_nome }}</td>
                                <td>
                                    <a href="/task/visualizar/{{ task.task_id }}" class="btn btn-primary">Visualizar</a>
                                    <a href="/task/editar/{{ task.task_id }}" class="btn btn-success">Editar</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr class="text-center" >
                                <td colspan="5">Nenhuma Task no momento.</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>

{% endblock %}